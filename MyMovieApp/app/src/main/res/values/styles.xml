<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="MovieTitleStyle">
        <item name="android:background">@color/indigo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/background_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LabelStyle">
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:tint">@color/indigo</item>
    </style>
    <style name="InfoStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/info_text</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
